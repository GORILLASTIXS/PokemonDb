@model IEnumerable<PokemonDb.pokemon>

@{
    ViewBag.Title = "Legendary";
}

<div>
    <img src="https://img.pokemondb.net/artwork/avif/bulbasaur.avif">
</div>
<p>
    <h2>Legendary</h2>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type_1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type_2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Defense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sp_Atk)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sp_Def)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Speed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Generation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Legendary)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type_1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type_2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attack)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Defense)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sp_Atk)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sp_Def)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Speed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Generation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Legendary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
